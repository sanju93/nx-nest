{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@nx-nest/auth": ["libs/auth/src/index.ts"],
      "@nx-nest/common": ["libs/common/src/index.ts"],
      "@nx-nest/db": ["libs/db/src/index.ts"],
      "@nx-nest/env": ["libs/env/src/index.ts"],
      "@nx-nest/notes": ["libs/notes/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
